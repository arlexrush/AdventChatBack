{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "FirebaseSettings": {
    "type": "<YOUR_FIREBASE_TYPE>",
    "project_id": "<YOUR_FIREBASE_PROJECT_ID>",
    "private_key_id": "<YOUR_FIREBASE_PRIVATE_KEY_ID>",
    "private_key": "<YOUR_FIREBASE_KEY>",
    "client_email": "<YOUR_FIREBASE_EMAIL>",
    "client_id": "<YOUR_FIREBASE_CLIENT_ID>",
    "auth_uri": "<YOUR_FIREBASE_AUTH_URI>",
    "token_uri": "<YOUR_FIREBASE_TOKEN_URI>",
    "auth_provider_x509_cert_url": "<YOUR_FIREBASE_AUTH_PROVIDER_X509_CERT_URL>",
    "client_x509_cert_url": "<YOUR_FIREBASE_CLIENT_X509_CERT_URL>",
    "universe_domain": "<YOUR_FIREBASE_UNIVERSE_DOMAIN>"
  },
  "FirebaseStorageSettings": {
    "BucketName": "<YOUR_FIREBASESTORAGE_BUCKETNAME>" //gs://datachatbot-a4250.appspot.com / gs://minimaldatachatbot.appspot.com
  },
  "ChunkingSettings": {
    "MaxChunkSize": 1000,
    "MinChunkSize": 100
  },
  "OpenAISettings": {
    "ApiKey": "<YOUR_OPENAI_API_KEY>",
    "ModelEmbeddingName": "<YOUR_OPENAI_MODEL_EMBEDDING_NAME>",
    "BaseUrl": "<YOUR_OPENAI_BASE_URL",
    "model": "<YOUR_OPENAI_MODEL>", // El modelo de lenguaje a utilizar.
    "max_tokens": 256, // Número máximo de tokens en la respuesta generada.
    "temperature": 0.7, // Ajusta la creatividad de la respuesta. Entre 0 y 1.
    "top_p": 1, // Controla la diversidad de la respuesta.
    "frequency_penalty": 0, // Penaliza la repetición de frases comunes.
    "presence_penalty": 0 // Penaliza la repetición de temas ya presentes en el prompt.
  },
  "HFSettings": {
    "ApiUrl": "<YOUR_HUGGING_FACE_API_URL>",
    "ApiKey": "<YOUR_HUGGING_FACE_API_KEY>"
  },
  "CohereSettings": {
    "ApiUrl": "<YOUR_COHERE_API_URL>",
    "ApiKey": "<YOUR_COHERE_API_KEY>"
  },
  "PineconeSettings": {
    "BaseUrl": "<YOUR_PINECONE_BASE_URL>",
    "ApiKey": "<YOUR_PINECONE_API_KEY>",
    "IndexName": "<YOUR_PINECONE_INDEX_NAME>",
    "Dimensions": "<YOUR_PINECONE_DIMENSIONS>",
    "SimilarityMetric": "<YOUR_PINECONE_SIMILARITY_METRIC>"
  },
  "AllowedHosts": "*"
} 